{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./packages/*"],
      "@base/*": ["./packages/base/*"],
      "@core/*": ["./packages/core/*"],
      "@theme/*": ["./packages/theme/*"],
      "@components/*": ["./packages/components/*"],
      "@utils/*": ["./packages/utils/*"]
    }
  },
  "include": [
    "./vite-env.d.ts",
    "packages/*.ts",
    "packages/**/*.ts",
    "packages/**/*.vue"
  ]
}
